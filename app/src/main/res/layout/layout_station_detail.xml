<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/llDetail"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="-10dp"
                                    android:visibility="gone"
                                    app:cardCornerRadius="6dp"
                                    app:cardElevation="8dp">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_padding_10dp"
        android:paddingEnd="@dimen/dimen_padding_2dp"
        android:paddingStart="@dimen/dimen_padding_2dp"
        android:paddingTop="@dimen/dimen_padding_10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_padding_5dp"
                    android:drawableRight="@drawable/selector_round_dot_gray"
                    android:padding="@dimen/dimen_padding_5dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_app_text_regular"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/vip"
                    android:drawablePadding="@dimen/dimen_padding_2dp"
                    android:padding="@dimen/dimen_padding_5dp"
                    android:text="0.0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_app_text_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_padding_5dp"
                android:layout_marginTop="@dimen/dimen_padding_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_5dp"
                    android:text="@string/text_level"

                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvLaval1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_round_shape_black_holo"
                    android:paddingEnd="@dimen/dimen_padding_3dp"
                    android:paddingStart="@dimen/dimen_padding_3dp"
                    android:text="@string/text_level_1"
                    android:textColor="@color/colorGray"

                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvLaval2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_padding_2dp"
                    android:layout_marginStart="@dimen/dimen_padding_2dp"
                    android:background="@drawable/selector_round_shape_black_holo"
                    android:paddingEnd="@dimen/dimen_padding_3dp"
                    android:paddingStart="@dimen/dimen_padding_3dp"
                    android:text="@string/text_level_2"
                    android:textColor="@color/colorGray"

                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvLaval3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_padding_2dp"
                    android:background="@drawable/selector_round_shape_black_holo"
                    android:paddingEnd="@dimen/dimen_padding_3dp"
                    android:paddingStart="@dimen/dimen_padding_3dp"
                    android:text="@string/text_level_3"
                    android:textColor="@color/colorGray"

                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvLavalDCFast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_round_shape_black_holo"
                    android:paddingEnd="@dimen/dimen_padding_3dp"
                    android:paddingStart="@dimen/dimen_padding_3dp"
                    android:text="@string/text_level_dc_fast"
                    android:textAlignment="textEnd"

                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvLavalSupper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_padding_2dp"
                    android:layout_marginStart="@dimen/dimen_padding_2dp"
                    android:background="@drawable/selector_round_shape_black_holo"
                    android:paddingEnd="@dimen/dimen_padding_3dp"
                    android:paddingStart="@dimen/dimen_padding_3dp"
                    android:text="@string/text_level_supper"
                    android:textColor="@color/colorGray"

                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_2dp"
                    android:src="@drawable/selector_round_dot_gray"/>

                <ImageView
                    android:id="@+id/ivHevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_2dp"
                    android:src="@drawable/hevo_light"/>

                <ImageView
                    android:id="@+id/ivPlug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_2dp"
                    android:src="@drawable/plug_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_3dp"
                    android:src="@drawable/three_des"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_3dp"
                    android:src="@drawable/huk"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_3dp"
                    android:src="@drawable/selector_round_dot_gray"/>


                <TextView
                    android:id="@+id/tvActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_round_shape_green"
                    android:paddingBottom="@dimen/dimen_padding_2dp"
                    android:paddingEnd="@dimen/dimen_padding_10dp"
                    android:paddingStart="@dimen/dimen_padding_10dp"
                    android:paddingTop="@dimen/dimen_padding_2dp"
                    android:text="0"

                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvInactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_padding_2dp"
                    android:layout_marginStart="@dimen/dimen_padding_2dp"
                    android:background="@drawable/selector_round_shape_cyne"
                    android:paddingBottom="@dimen/dimen_padding_2dp"
                    android:paddingEnd="@dimen/dimen_padding_10dp"
                    android:paddingStart="@dimen/dimen_padding_10dp"
                    android:paddingTop="@dimen/dimen_padding_2dp"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvStopped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_round_shape_gray"
                    android:paddingBottom="@dimen/dimen_padding_2dp"
                    android:paddingEnd="@dimen/dimen_padding_10dp"
                    android:paddingStart="@dimen/dimen_padding_10dp"
                    android:paddingTop="@dimen/dimen_padding_2dp"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_3dp"
                    android:src="@drawable/selector_round_dot_gray"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_5dp"
                    android:text="$00.00/hr"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_app_text_medium"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_3dp"
                    android:src="@drawable/selector_round_dot_gray"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_2dp"
                    android:src="@drawable/round_star"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_padding_2dp"
                    android:src="@drawable/ic_whatshot_black_18px"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDiv"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNavigated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_padding_5dp"
                android:src="@drawable/nevigate"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_padding_5dp"
                android:text="00 Min"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_app_text_medium"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>