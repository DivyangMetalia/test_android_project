<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cvOpenToolBox"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:layout_gravity="end"
    android:layout_marginBottom="@dimen/dimen_padding_10dp"
    android:layout_marginEnd="@dimen/dimen_padding_10dp"
    android:background="@color/colorWhite"
    android:visibility="visible"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dimen_padding_2dp">


        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_padding_8dp"
            android:src="@drawable/ic_refresh_black_24px"
            android:visibility="visible"/>

        <include layout="@layout/layout_horizontal_div"/>

        <ImageView
            android:id="@+id/ivLocation"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_padding_8dp"
            android:src="@drawable/location"
            android:visibility="visible"/>

        <include layout="@layout/layout_horizontal_div"/>

        <ImageView
            android:id="@+id/ivFilter"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_padding_8dp"
            android:src="@drawable/ic_filter_list_black"
            android:visibility="visible"/>

        <include layout="@layout/layout_horizontal_div"/>

        <ImageView
            android:id="@+id/ivFilterList"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_padding_8dp"
            android:src="@drawable/ic_filter_list_black_24px"
            android:visibility="visible"/>

        <include layout="@layout/layout_horizontal_div"/>

        <ImageView
            android:id="@+id/ivOpenToolBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_padding_8dp"
            android:paddingBottom="@dimen/dimen_padding_8dp"
            android:src="@drawable/three_dot_blue"
            android:visibility="visible"/>
    </LinearLayout>
</android.support.v7.widget.CardView>